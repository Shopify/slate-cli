# This file contains the information needed for Shopify to authenticate
# requests and edit/update the theme files in the manner specified.
#
# Note: If no theme id is specified, the currently active theme will
# be modified.
#
# More information @ http://themekit.cat/docs/.

<% environments.forEach(function(env) { %>
<%= env %>:
  theme-id: (optional - if empty, you will write to the active theme)
  password: XXXXXXXXXX
  store: my-store-name.myshopify.com
  ignore_files:
    - config/settings_data.json
    - config/settings.html
    - "*.png"
    - "*.jpg"
    - "*.jpeg"
    - "*.gif"
    - "*.pdf"
    - "*.mp4"
<% }); %>
